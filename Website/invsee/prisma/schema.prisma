// Database connection

datasource db {
    provider     = "mongodb"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

generator client {
    provider = "prisma-client-js"
}

// USER SCHEMA

model User {
    id        String   @id @default(auto()) @map("_id") @db.ObjectId
    email     String   @unique
    password  String
    nick      String
    firstName String
    lastName  String
    role      Role
    image     String?
    posts     Post[]
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

enum Role {
    Admin
    Mod
    Editor
}

model Post {
    id          String @id @default(auto()) @map("_id") @db.ObjectId
    authorId    String @db.ObjectId()
    author      User   @relation(fields: [authorId], references: [id])
    title       String
    description String
}
